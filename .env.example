# Cloudflare R2 Configuration
# Copy this file to .env and fill in your R2 credentials

# Your Cloudflare Account ID (found in dashboard URL)
R2_ACCOUNT_ID=your_account_id_here

# R2 API Token credentials (generate from R2 dashboard)
R2_ACCESS_KEY_ID=your_access_key_id_here
R2_SECRET_ACCESS_KEY=your_secret_access_key_here

# R2 Bucket name
R2_BUCKET_NAME=your_bucket_name_here

# R2 Region (use 'auto' for Cloudflare R2)
R2_REGION=auto

# Enable/Disable R2 storage (set to 'true' to use R2, 'false' for local storage)
USE_R2_STORAGE=false

# Public URL for R2 bucket (optional - for public buckets)
# Format: https://pub-xxxxx.r2.dev or your custom domain
R2_PUBLIC_URL=
